---
import Breadcrumbs from "@components/Breadcrumbs.astro";

export interface Props {
  pageTitle: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<!-- <Breadcrumbs /> -->
<main id="main-content">
  <h1>{pageTitle}</h1>
  <p>{pageDesc}</p>
  <slot />
</main>

<style>
  #main-content {
    @apply mx-auto mt-12 w-full max-w-3xl px-4 pb-12;
  }
  #main-content h1 {
    @apply text-xl font-semibold sm:text-2xl;
  }
  #main-content p {
    @apply mt-2 mb-6 italic;
  }
</style>

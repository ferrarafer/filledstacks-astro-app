---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Card from "@components/Card.astro";
import LinkButton from "@components/LinkButton.astro";
import slugify from "@utils/slugify";
import type { CollectionEntry } from "astro:content";
import i18next, { t } from "i18next";
import { localizePath } from "astro-i18next";

export interface Props {
  pageTitle: string;
  pageDescription: string;
  pageNum: number;
  totalPages: number;
  posts: CollectionEntry<"blog">[];
  isSnippet?: boolean;
}

const {
  pageTitle,
  pageDescription,
  pageNum,
  totalPages,
  posts,
  isSnippet = false,
} = Astro.props;

const prev = pageNum > 1 ? "" : "disabled";
const next = pageNum < totalPages ? "" : "disabled";
---

<Layout title={`${pageTitle} | ${SITE.title}`}>
  <Header activeNav="posts" />
  <Main pageTitle={pageTitle} pageDesc={pageDescription}>
    <div class="m-auto grid grid-cols-1 justify-center gap-8 sm:grid-cols-2">
      {
        posts.map(({ data }) => (
          <Card
            title={data.title}
            body={data.description}
            ogImage={data.ogImage}
            href={localizePath(`/posts/${slugify(data)}`, i18next.language)}
            published={data.published}
          />
        ))
      }
    </div>
  </Main>

  {
    totalPages > 1 && (
      <nav class="pagination-wrapper" aria-label="Pagination">
        <LinkButton
          disabled={prev === "disabled"}
          href={localizePath(
            `/${isSnippet ? "snippets" : "tutorials"}${
              pageNum - 1 !== 1 ? "/" + (pageNum - 1) : ""
            }`,
            i18next.language
          )}
          className={`mr-4 select-none ${prev}`}
          ariaLabel="Previous"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class={`${prev}-svg`}>
            <path d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z" />
          </svg>
          {t("site.prev")}
        </LinkButton>
        <LinkButton
          disabled={next === "disabled"}
          href={localizePath(
            `/${isSnippet ? "snippets" : "tutorials"}/${pageNum + 1}`,
            i18next.language
          )}
          className={`ml-4 select-none ${next}`}
          ariaLabel="Next"
        >
          {t("site.next")}
          <svg xmlns="http://www.w3.org/2000/svg" class={`${next}-svg`}>
            <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z" />
          </svg>
        </LinkButton>
      </nav>
    )
  }
  <Footer noMarginTop={totalPages > 1} />
</Layout>

<style>
  .pagination-wrapper {
    @apply mt-auto mb-8 flex justify-center;
  }
  .disabled {
    @apply pointer-events-none select-none opacity-50 hover:text-skin-base group-hover:fill-skin-base;
  }
  .disabled-svg {
    @apply group-hover:!fill-skin-base;
  }
</style>

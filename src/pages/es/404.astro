---
import i18next, { t, changeLanguage } from "i18next";
import { localizePath } from "astro-i18next";
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";

changeLanguage("es");
---

<Layout title={`${t("404.title")} | ${SITE.title}`}>
  <Header />

  <main id="main-content">
    <div class="not-found-wrapper">
      <h1 aria-label={t("404.title")}>404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p>{t("404.page_not_found")}</p>
      <LinkButton
        href={localizePath(`/`, i18next.language)}
        className="my-6 underline decoration-dashed underline-offset-8 text-lg"
      >
        {t("404.go_back_home")}
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  #main-content {
    @apply mx-auto flex max-w-3xl flex-1 items-center justify-center;
  }
  .not-found-wrapper {
    @apply mb-14 flex flex-col items-center justify-center;
  }
  .not-found-wrapper h1 {
    @apply text-9xl font-bold text-skin-accent;
  }
  .not-found-wrapper p {
    @apply mt-4 text-2xl sm:text-3xl;
  }
</style>
